/* 个人资料编辑器样式 */

.profile-editor {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.profile-editor.visible {
  opacity: 1;
  visibility: visible;
}

/* 遮罩层 */
.editor-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

/* 编辑器内容 */
.editor-content {
  position: absolute;
  top: 10%;
  left: 5%;
  width: 90%;
  height: 80%;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.profile-editor.visible .editor-content {
  transform: scale(1);
}

/* 标题栏 */
.editor-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fafafa;
}

.header-left,
.header-right {
  width: 120rpx;
}

.header-center {
  flex: 1;
  text-align: center;
}

.cancel-button,
.save-button {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  text-align: center;
}

.cancel-button {
  background: transparent;
}

.save-button {
  background: #1890ff;
}

.cancel-text {
  font-size: 28rpx;
  color: #666666;
}

.save-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.editor-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

/* 编辑器主体 */
.editor-body {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

/* 区域标题 */
.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4d4f;
}

/* 头像选择区域 */
.avatar-section {
  margin-bottom: 40rpx;
}

.avatar-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.avatar-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
}

.avatar-hint {
  font-size: 24rpx;
  color: #999999;
}

/* 头像颜色选择 */
.avatar-colors {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
}

.color-option {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.color-option:active {
  transform: scale(0.95);
}

.color-option.selected {
  transform: scale(1.1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.color-check {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.2);
}

.check-icon {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 表单区域 */
.form-section {
  margin-bottom: 32rpx;
}

.input-wrapper {
  position: relative;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333333;
  background: #ffffff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1890ff;
  outline: none;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333333;
  background: #ffffff;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  border-color: #1890ff;
  outline: none;
}

/* 字符计数 */
.input-counter {
  position: absolute;
  right: 24rpx;
  bottom: 20rpx;
  pointer-events: none;
}

.counter-text {
  font-size: 24rpx;
  color: #999999;
}

/* 错误信息 */
.error-message {
  margin-top: 8rpx;
}

.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
}

/* 深色模式支持 */
.theme-dark .editor-content {
  background: #2d2d2d;
  border: 1rpx solid #3a3a3a;
}

.theme-dark .editor-header {
  background: #252525;
  border-bottom-color: #3a3a3a;
}

.theme-dark .editor-title {
  color: #ffffff;
}

.theme-dark .cancel-text {
  color: #cccccc;
}

.theme-dark .section-title {
  color: #ffffff;
}

.theme-dark .avatar-hint {
  color: #999999;
}

.theme-dark .form-input,
.theme-dark .form-textarea {
  background: #3a3a3a;
  border-color: #4a4a4a;
  color: #ffffff;
}

.theme-dark .form-input:focus,
.theme-dark .form-textarea:focus {
  border-color: #1890ff;
}

.theme-dark .counter-text {
  color: #999999;
}

/* 响应式调整 */
@media (max-height: 600px) {
  .editor-content {
    top: 5%;
    height: 90%;
  }
}