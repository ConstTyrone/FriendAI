/* 个人资料编辑器 - 现代化重设计 */

/* ===== 弹窗容器 ===== */
.profile-editor {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.profile-editor.visible {
  opacity: 1;
  visibility: visible;
}

/* ===== 遮罩层 ===== */
.editor-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
}

/* ===== 主内容区 ===== */
.editor-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 95vh;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.12);
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.profile-editor.visible .editor-content {
  transform: translateY(0);
}

/* ===== 标题栏 ===== */
.editor-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: sticky;
  top: 0;
  background: #ffffff;
  z-index: 100;
}

.header-action {
  min-width: 80rpx;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s ease;
}

.header-action:active {
  background-color: #f5f5f5;
}

.header-title {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-text {
  font-size: 30rpx;
  font-weight: 500;
}

.action-text.cancel {
  color: #8a8a8a;
}

.action-text.save {
  color: #007AFF;
}

.title-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
}

/* ===== 内容滚动区 ===== */
.editor-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

/* ===== 头像选择区域 ===== */
.avatar-section {
  margin-bottom: 48rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.avatar-container {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 头像预览 */
.avatar-preview {
  flex: 0 0 33.333%;
  display: flex;
  justify-content: center;
}

.avatar-display {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.2s ease;
}

.avatar-letter {
  font-size: 52rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 颜色选择器 */
.color-palette {
  flex: 0 0 66.667%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.color-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
}

.color-item:active {
  transform: scale(0.95);
}

.color-item.active {
  transform: scale(1.1);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.color-item.active::after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border: 4rpx solid #007AFF;
  border-radius: 50rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.05); }
}

.color-indicator {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
}

.indicator-icon {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* ===== 表单字段 ===== */
.form-fields {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.field-group {
  display: flex;
  flex-direction: column;
}

/* 字段标题 */
.field-header {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.field-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.field-required {
  font-size: 24rpx;
  color: #ff3b30;
  font-weight: 500;
}

.field-optional {
  font-size: 26rpx;
  color: #8a8a8a;
  font-weight: 400;
}

/* 输入控件 */
.field-input {
  margin-bottom: 8rpx;
}

.input-control,
.textarea-control {
  width: 100%;
  padding: 28rpx 20rpx;
  background: #f8f8f8;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #1d1d1f;
  box-sizing: border-box;
  transition: all 0.2s ease;
  min-height: 96rpx;
  line-height: 1.5;
}

.input-control:focus,
.textarea-control:focus {
  background: #ffffff;
  border-color: #007AFF;
  outline: none;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.1);
}

.input-control::placeholder,
.textarea-control::placeholder {
  color: #c7c7cc;
}

.textarea-control {
  min-height: 120rpx;
  resize: none;
  line-height: 1.5;
}

/* 字段底部 */
.field-footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-height: 32rpx;
}

.char-count {
  font-size: 24rpx;
  color: #8a8a8a;
  font-weight: 400;
}

/* 错误信息 */
.field-error {
  margin-top: 8rpx;
}

.error-message {
  font-size: 26rpx;
  color: #ff3b30;
  font-weight: 500;
}

/* ===== 深色模式适配 ===== */
.theme-dark .editor-content {
  background: #1c1c1e;
  border-top: 1rpx solid #2c2c2e;
}

.theme-dark .editor-header {
  background: #1c1c1e;
  border-bottom-color: #2c2c2e;
}

.theme-dark .header-action:active {
  background-color: #2c2c2e;
}

.theme-dark .title-text {
  color: #ffffff;
}

.theme-dark .action-text.cancel {
  color: #8e8e93;
}

.theme-dark .section-title {
  color: #ffffff;
}

.theme-dark .field-label {
  color: #ffffff;
}

.theme-dark .field-optional {
  color: #8e8e93;
}

.theme-dark .input-control,
.theme-dark .textarea-control {
  background: #2c2c2e;
  color: #ffffff;
  border-color: transparent;
}

.theme-dark .input-control:focus,
.theme-dark .textarea-control:focus {
  background: #3a3a3c;
  border-color: #007AFF;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.2);
}

.theme-dark .input-control::placeholder,
.theme-dark .textarea-control::placeholder {
  color: #636366;
}

.theme-dark .char-count {
  color: #8e8e93;
}

/* ===== 响应式适配 ===== */
@media (max-width: 375px) {
  .avatar-container {
    gap: 24rpx;
  }
  
  .avatar-display {
    width: 100rpx;
    height: 100rpx;
  }
  
  .avatar-letter {
    font-size: 44rpx;
  }
  
  .color-item {
    width: 70rpx;
    height: 70rpx;
  }
  
  .color-palette {
    gap: 16rpx;
  }
}

@media (max-height: 600px) {
  .editor-content {
    max-height: 95vh;
  }
  
  .editor-body {
    padding: 24rpx;
  }
  
  .form-fields {
    gap: 24rpx;
  }
}