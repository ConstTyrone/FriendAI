/* 模态框容器 */
.custom-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.custom-modal.visible {
  opacity: 1;
  pointer-events: auto;
}

/* 遮罩层 */
.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

/* 模态框内容 */
.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.8);
  width: 560rpx;
  max-width: 90vw;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
  overflow: hidden;
  transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.custom-modal.show .modal-content {
  transform: translate(-50%, -50%) scale(1);
}

.custom-modal.hide .modal-content {
  transform: translate(-50%, -50%) scale(0.9);
}

/* 关闭按钮 */
.modal-close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
  z-index: 10;
  transition: background-color 0.2s ease;
}

.modal-close:active {
  background: rgba(0, 0, 0, 0.1);
}

.close-icon {
  font-size: 36rpx;
  color: #666666;
  line-height: 1;
  font-weight: 300;
}

/* 头部 */
.modal-header {
  padding: 48rpx 48rpx 24rpx 48rpx;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1D1D1F;
  line-height: 1.3;
}

/* 内容区域 */
.modal-body {
  padding: 0 48rpx 32rpx 48rpx;
  text-align: center;
}

.modal-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 自定义内容插槽 */
.modal-slot {
  padding: 0 48rpx 32rpx 48rpx;
}

/* 底部按钮区域 */
.modal-footer {
  border-top: 1rpx solid #E5E5E5;
  padding: 32rpx 48rpx;
}

.modal-buttons {
  display: flex;
  gap: 24rpx;
}

/* 按钮样式 */
.modal-button {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.modal-button:active {
  transform: scale(0.98);
}

/* 取消按钮 */
.cancel-button {
  background: #F5F5F7;
  border: 1rpx solid #E5E5E5;
}

.cancel-button:active {
  background: #EBEBF0;
}

.cancel-button .button-text {
  color: #666666;
  font-weight: 500;
}

/* 确认按钮 - 主要 */
.confirm-button.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.3);
}

.confirm-button.primary:active {
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.4);
}

.confirm-button.primary .button-text {
  color: #FFFFFF;
  font-weight: 600;
}

/* 确认按钮 - 危险 */
.confirm-button.danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  box-shadow: 0 4px 16px rgba(255, 107, 107, 0.3);
}

.confirm-button.danger:active {
  box-shadow: 0 2px 8px rgba(255, 107, 107, 0.4);
}

.confirm-button.danger .button-text {
  color: #FFFFFF;
  font-weight: 600;
}

/* 确认按钮 - 成功 */
.confirm-button.success {
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
  box-shadow: 0 4px 16px rgba(81, 207, 102, 0.3);
}

.confirm-button.success:active {
  box-shadow: 0 2px 8px rgba(81, 207, 102, 0.4);
}

.confirm-button.success .button-text {
  color: #FFFFFF;
  font-weight: 600;
}

/* 按钮文字 */
.button-text {
  font-size: 32rpx;
  line-height: 1;
}

/* 单按钮布局 */
.modal-buttons .modal-button:only-child {
  flex: none;
  min-width: 240rpx;
}

/* 深色模式 */
page.theme-dark .modal-content {
  background: #2D2D2D;
}

page.theme-dark .modal-title {
  color: #FFFFFF;
}

page.theme-dark .modal-text {
  color: #A0A0A0;
}

page.theme-dark .modal-footer {
  border-top-color: #3A3A3A;
}

page.theme-dark .cancel-button {
  background: #3A3A3A;
  border-color: #4A4A4A;
}

page.theme-dark .cancel-button:active {
  background: #4A4A4A;
}

page.theme-dark .cancel-button .button-text {
  color: #A0A0A0;
}

page.theme-dark .modal-close {
  background: rgba(255, 255, 255, 0.1);
}

page.theme-dark .modal-close:active {
  background: rgba(255, 255, 255, 0.15);
}

page.theme-dark .close-icon {
  color: #A0A0A0;
}