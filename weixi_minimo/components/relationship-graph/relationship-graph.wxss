/* ÂÖ≥Á≥ªÂõæË∞±ÂèØËßÜÂåñÁªÑ‰ª∂Ê†∑Âºè */
.relationship-graph {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: var(--td-bg-color-page);
}

/* Â∑•ÂÖ∑Ê†èÊ†∑Âºè */
.graph-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 24rpx;
  background: var(--td-bg-color-container);
  border-bottom: 1rpx solid var(--td-border-level-1-color);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.toolbar-left,
.toolbar-right {
  display: flex;
  gap: 16rpx;
}

/* Â∑•ÂÖ∑Ê†èÊåâÈíÆÂ¢ûÂº∫ */
.graph-toolbar t-button {
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.graph-toolbar t-button:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* ÁªüËÆ°‰ø°ÊÅØÊ†∑Âºè */
.graph-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, var(--td-bg-color-container) 0%, rgba(6, 174, 86, 0.02) 100%);
  border-bottom: 1rpx solid var(--td-border-level-1-color);
  position: relative;
  z-index: 5;
}

.graph-stats::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #06ae56 50%, transparent 100%);
  opacity: 0.6;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  position: relative;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.stat-item:hover {
  background: rgba(6, 174, 86, 0.08);
  transform: translateY(-2rpx);
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #06ae56;
  background: linear-gradient(135deg, #06ae56 0%, rgba(6, 174, 86, 0.8) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.2;
  font-variant-numeric: tabular-nums;
  text-shadow: 0 2rpx 4rpx rgba(6, 174, 86, 0.2);
}

.stat-label {
  font-size: 24rpx;
  color: var(--td-text-color-secondary);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* ÁîªÂ∏ÉÂÆπÂô®Ê†∑Âºè */
.graph-canvas-container {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.graph-canvas {
  width: 100%;
  height: 100%;
  background: var(--td-bg-color-container);
}

/* Âä†ËΩΩÁä∂ÊÄÅÊ†∑Âºè */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
}

/* Á©∫Áä∂ÊÄÅÊ†∑Âºè */
.empty-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  color: var(--td-text-color-placeholder);
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
}

.empty-tip {
  font-size: 28rpx;
  text-align: center;
  max-width: 400rpx;
}

/* Âõæ‰æãÊ†∑Âºè */
.graph-legend {
  padding: 16rpx 24rpx;
  background: var(--td-bg-color-container);
  border-top: 1rpx solid var(--td-border-level-1-color);
  z-index: 20;
  position: relative;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: calc(0rpx + env(safe-area-inset-bottom));
}

.legend-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary);
  margin-bottom: 16rpx;
  position: relative;
  padding-left: 24rpx;
}

.legend-title::before {
  content: 'üìä';
  position: absolute;
  left: 0;
  font-size: 20rpx;
}

.legend-content {
  white-space: nowrap;
}

.legend-items {
  display: flex;
  gap: 24rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.02);
  transition: all 0.2s ease;
  border: 1rpx solid transparent;
}

.legend-item:hover {
  background: rgba(6, 174, 86, 0.1);
  border-color: rgba(6, 174, 86, 0.2);
  transform: translateY(-1rpx);
}

.legend-color {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.2);
}

.legend-text {
  font-size: 24rpx;
  color: var(--td-text-color-secondary);
  font-weight: 500;
}

/* ‰∫§‰∫íÊèêÁ§∫Ê†∑Âºè */
.interaction-tips {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--td-border-level-1-color);
}

.tips-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--td-text-color-primary);
  margin-bottom: 12rpx;
}

.tips-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tip-item {
  font-size: 22rpx;
  color: var(--td-text-color-placeholder);
  background: rgba(6, 174, 86, 0.05);
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(6, 174, 86, 0.1);
  line-height: 1.2;
  transition: all 0.2s ease;
}

.tip-item:hover {
  background: rgba(6, 174, 86, 0.1);
  border-color: rgba(6, 174, 86, 0.2);
  color: var(--td-text-color-secondary);
}

/* ËäÇÁÇπËØ¶ÊÉÖÂºπÁ™óÊ†∑Âºè */
