/* 关系发现提示组件样式 */

.relationship-tip {
  position: fixed;
  top: 100rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 999;
  opacity: 0;
  transform: translateY(-30rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.relationship-tip.visible {
  opacity: 1;
  transform: translateY(0);
  pointer-events: all;
}

/* 提示卡片 */
.tip-card {
  background: var(--td-bg-color-container, #ffffff);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid var(--td-border-level-1-color, #f0f0f0);
  position: relative;
}

/* 深色模式 */
.relationship-tip.dark .tip-card {
  background: var(--td-bg-color-container, #2c2c2c);
  border-color: var(--td-border-level-1-color, #444444);
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.3);
}

/* 提示头部 */
.tip-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.tip-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.icon-text {
  font-size: 28rpx;
  color: #ffffff;
}

.tip-content {
  flex: 1;
}

.tip-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #212121);
  line-height: 1.3;
}

.tip-subtitle {
  display: block;
  font-size: 26rpx;
  color: var(--td-text-color-secondary, #757575);
  margin-top: 8rpx;
  line-height: 1.4;
}

.tip-arrow {
  color: var(--td-text-color-placeholder, #bdbdbd);
  margin-left: 16rpx;
}

.arrow-text {
  font-size: 36rpx;
  font-weight: 300;
}

/* 关系预览 */
.relationships-preview {
  border-top: 2rpx solid var(--td-border-level-2-color, #f5f5f5);
  padding-top: 24rpx;
  margin-top: 8rpx;
}

.relationship-preview-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.relationship-preview-item:first-child {
  padding-top: 0;
}

.relationship-preview-item:last-child {
  padding-bottom: 0;
}

.preview-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--td-brand-color-7, #e7f2ff);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.preview-avatar-text {
  font-size: 20rpx;
  font-weight: 600;
  color: var(--td-brand-color, #0052d9);
}

.preview-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.preview-name {
  font-size: 26rpx;
  color: var(--td-text-color-primary, #212121);
  font-weight: 500;
  line-height: 1.3;
}

.preview-relation {
  font-size: 22rpx;
  color: var(--td-text-color-secondary, #757575);
  margin-top: 4rpx;
  line-height: 1.2;
}

.preview-confidence {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.confidence-text {
  font-size: 22rpx;
  color: var(--td-success-color, #00a870);
  font-weight: 600;
  background: var(--td-success-color-1, #e8f8f2);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 快速操作按钮 */
.tip-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 24rpx;
  border-top: 2rpx solid var(--td-border-level-2-color, #f5f5f5);
  padding-top: 24rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn.primary {
  background: var(--td-brand-color, #0052d9);
  color: #ffffff;
}

.action-btn.primary:active {
  background: var(--td-brand-color-8, #0042b6);
}

.action-btn.secondary {
  background: var(--td-bg-color-secondarycontainer, #f5f5f5);
  color: var(--td-text-color-secondary, #757575);
}

.action-btn.secondary:active {
  background: var(--td-bg-color-component-disabled, #e6e6e6);
}

.action-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 48rpx;
  height: 48rpx;
  background: var(--td-bg-color-container, #ffffff);
  border: 2rpx solid var(--td-border-level-1-color, #f0f0f0);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.close-btn:active {
  transform: scale(0.9);
  background: var(--td-bg-color-component-disabled, #f5f5f5);
}

.close-text {
  font-size: 32rpx;
  color: var(--td-text-color-placeholder, #bdbdbd);
  font-weight: 300;
  line-height: 1;
}

/* 深色模式适配 */
.relationship-tip.dark .tip-title {
  color: var(--td-text-color-primary, #e0e0e0);
}

.relationship-tip.dark .tip-subtitle {
  color: var(--td-text-color-secondary, #bdbdbd);
}

.relationship-tip.dark .relationships-preview {
  border-top-color: var(--td-border-level-2-color, #404040);
}

.relationship-tip.dark .preview-name {
  color: var(--td-text-color-primary, #e0e0e0);
}

.relationship-tip.dark .preview-relation {
  color: var(--td-text-color-secondary, #bdbdbd);
}

.relationship-tip.dark .tip-actions {
  border-top-color: var(--td-border-level-2-color, #404040);
}

.relationship-tip.dark .close-btn {
  background: var(--td-bg-color-container, #2c2c2c);
  border-color: var(--td-border-level-1-color, #444444);
}