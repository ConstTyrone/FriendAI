/* 自定义TabBar - 现代扁平设计 */

/* 深色模式适配 */
.theme-dark .custom-tabbar {
  background: linear-gradient(180deg, rgba(26, 26, 26, 0) 0%, rgba(26, 26, 26, 0.8) 20%, rgba(26, 26, 26, 1) 100%);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.theme-dark .tab-item {
  color: #999999;
}

.theme-dark .tab-item.active {
  color: #06ae56;
}

.theme-dark .tab-item.highlight .tab-text {
  color: #ff6b6b;
}

.theme-dark .tab-badge {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
}

.theme-dark .badge-text {
  color: #ffffff;
}
.custom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.8) 20%, rgba(255, 255, 255, 1) 100%);
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(0, 0, 0, 0.06);
}

.tabbar-container {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 16rpx 40rpx 32rpx;
  margin: 0 auto;
  gap: 20rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  min-width: 120rpx;
  position: relative;
}

/* 激活状态 */
.tab-item.active {
  background: rgba(24, 144, 255, 0.08);
  transform: translateY(-4rpx);
}

.tab-item.active::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #1890ff;
  border-radius: 3rpx;
}

/* 图标样式 */
.tab-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 6rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.tab-item.active .tab-icon {
  transform: scale(1.15) translateY(-2rpx);
}

/* 图标背景效果 */
.tab-item.active .tab-icon::before {
  content: '';
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  background: rgba(24, 144, 255, 0.08);
  border-radius: 50%;
  z-index: -1;
  animation: iconPulse 0.6s ease-out;
}

@keyframes iconPulse {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0.8;
  }
}

/* 文字样式 */
.tab-text {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1.3;
  text-align: center;
  letter-spacing: 0.2rpx;
}

.tab-item.active .tab-text {
  color: #1890ff;
  font-weight: 600;
  transform: scale(1.05);
}

/* 突出显示的tab项 */
.tab-item.highlight {
  position: relative;
}

.tab-item.highlight .tab-icon {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.tab-text.highlight-text {
  color: #ff6b6b;
  font-weight: 600;
}

.tab-item.active .tab-text.highlight-text {
  color: #1890ff;
}

/* 徽章样式 */
.tab-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 16rpx;
  padding: 2rpx 8rpx;
  z-index: 10;
  animation: badge-bounce 0.5s ease-out;
}

.badge-text {
  color: #ffffff;
  font-size: 18rpx;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

@keyframes badge-bounce {
  0% {
    transform: scale(0);
  }
  60% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .tabbar-container {
    padding: 12rpx 40rpx 28rpx;
    gap: 30rpx;
  }
  
  .tab-item {
    min-width: 100rpx;
    padding: 12rpx 20rpx;
  }
  
  .tab-text {
    font-size: 22rpx;
  }
}

/* 适配iPhone底部安全区域 */
.custom-tabbar {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 悬浮效果（可选） */
.tab-item:hover {
  background: rgba(24, 144, 255, 0.04);
}

/* 暗黑模式支持 */
@media (prefers-color-scheme: dark) {
  .custom-tabbar {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 20%, rgba(0, 0, 0, 1) 100%);
    border-top-color: rgba(255, 255, 255, 0.1);
  }
  
  .tab-text {
    color: #cccccc;
  }
  
  .tab-item.active {
    background: rgba(24, 144, 255, 0.15);
  }
}