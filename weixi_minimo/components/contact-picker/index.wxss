/* 联系人多选组件样式 */
.contact-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  transition: all 0.3s ease;
}

.contact-picker.hide {
  opacity: 0;
  pointer-events: none;
}

.contact-picker.show {
  opacity: 1;
  pointer-events: auto;
}

/* 遮罩层 */
.picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

/* 选择器主体 */
.picker-container {
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  top: 10%;
  bottom: 10%;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 头部 */
.picker-header {
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 搜索框 */
.search-container {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 全选控制 */
.select-all-container {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.select-all-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.select-all-text {
  font-size: 30rpx;
  color: #333;
  margin-left: 20rpx;
}

/* 复选框样式 */
.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: #07c160;
  border-color: #07c160;
}

.checkbox-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

/* 联系人列表 */
.contact-list {
  flex: 1;
  padding: 0 30rpx;
}

.loading-container,
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

.loading-text,
.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 联系人项 */
.contact-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s ease;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item.selected {
  background-color: #f0f9ff;
}

.contact-checkbox {
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
}

.contact-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.contact-phone {
  font-size: 26rpx;
  color: #666;
}

/* 底部按钮 */
.picker-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #ccc;
  color: #fff;
}

.confirm-btn.active {
  background: #07c160;
}

.confirm-btn[disabled] {
  background: #ccc;
  color: #999;
}