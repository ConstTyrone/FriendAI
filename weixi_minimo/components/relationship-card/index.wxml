<!--关系卡片组件 - 极简版-->
<view class="relationship-card-compact {{themeClass}}" bind:tap="onCardTap">
  <view class="card-main">
    <!-- 左侧：双方头像 -->
    <view class="avatars-section">
      <view class="avatar-small source">
        <text class="avatar-text">{{sourceInitial || sourceProfile.initial}}</text>
      </view>
      <view class="relation-icon">
        <text class="icon-text">{{getRelationshipIcon(relationship.relationship_type)}}</text>
      </view>
      <view class="avatar-small target">
        <text class="avatar-text">{{targetInitial || targetProfile.initial}}</text>
      </view>
    </view>
    
    <!-- 中间：核心信息 -->
    <view class="info-section">
      <view class="primary-info">
        <text class="names">{{sourceProfile.profile_name}} ↔ {{targetProfile.profile_name}}</text>
        <view class="meta-tags">
          <text class="relation-type">{{formatRelationshipType(relationship.relationship_type)}}</text>
          <text class="confidence-score">{{formatConfidence(relationship.confidence_score)}}%</text>
          <text class="status-tag {{relationship.status}}">{{formatStatus(relationship.status)}}</text>
        </view>
      </view>
      <view class="secondary-info" wx:if="{{sourceProfile.company || targetProfile.company}}">
        <text class="company-info">{{sourceProfile.company || '·'}} ↔ {{targetProfile.company || '·'}}</text>
      </view>
    </view>
    
    <!-- 右侧：快速操作 -->
    <view class="actions-section" wx:if="{{showActions && relationship.status === 'discovered'}}">
      <view class="action-btn-mini confirm" bind:tap="onConfirm" catch:tap="stopPropagation">
        <text class="btn-text">✓</text>
      </view>
      <view class="action-btn-mini ignore" bind:tap="onIgnore" catch:tap="stopPropagation">
        <text class="btn-text">✕</text>
      </view>
    </view>
  </view>
  
  <!-- 可展开的证据信息 -->
  <view class="evidence-compact" wx:if="{{relationship.evidence && showEvidence}}">
    <text class="evidence-brief">{{formatEvidence(relationship.evidence)}}</text>
  </view>
</view>