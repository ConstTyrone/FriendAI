/* 关系卡片组件样式 */

.relationship-card {
  background: var(--td-bg-color-container, #ffffff);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid var(--td-border-level-1-color, #f0f0f0);
  transition: all 0.3s ease;
  position: relative;
}

.relationship-card:active {
  background: var(--td-bg-color-component-active, #f8f9fa);
  transform: scale(0.995);
}

/* 深色模式 */
.relationship-card.dark {
  background: var(--td-bg-color-container, #2c2c2c);
  border-color: var(--td-border-level-1-color, #444444);
}

.relationship-card.dark:active {
  background: var(--td-bg-color-component-active, #363636);
}

/* 卡片头部 */
.card-header {
  margin-bottom: 24rpx;
}

/* 关系双方头像区域 */
.profiles-avatars {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.profile-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid var(--td-bg-color-container, #ffffff);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

.profile-avatar.source {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.profile-avatar.target {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.avatar-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 关系连线 */
.relationship-connection {
  position: relative;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
}

.connection-line {
  width: 80rpx;
  height: 4rpx;
  background: var(--td-brand-color-3, #b5c7ff);
  border-radius: 2rpx;
}

.connection-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  background: var(--td-brand-color, #0052d9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid var(--td-bg-color-container, #ffffff);
  z-index: 3;
}

.connection-text {
  font-size: 18rpx;
  color: #ffffff;
}

/* 关系元信息 */
.relationship-meta {
  text-align: center;
}

.relationship-type {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.type-text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #212121);
}

.confidence-badge {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--td-success-color, #00a870);
  background: var(--td-success-color-1, #e8f8f2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.relationship-direction {
  opacity: 0.7;
}

.direction-text {
  font-size: 22rpx;
  color: var(--td-text-color-secondary, #757575);
}

/* 卡片内容 */
.card-content {
  margin-bottom: 24rpx;
}

.profile-info {
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.profile-info.source {
  background: var(--td-brand-color-1, #f2f4ff);
  border-left: 6rpx solid var(--td-brand-color, #0052d9);
}

.profile-info.target {
  background: var(--td-error-color-1, #fff1f0);
  border-left: 6rpx solid var(--td-error-color-6, #ff7875);
}

.profile-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary, #212121);
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.profile-details {
  font-size: 24rpx;
  color: var(--td-text-color-secondary, #757575);
  line-height: 1.4;
}

/* 关系说明 */
.relationship-desc {
  text-align: center;
  padding: 16rpx 0;
  margin: 0 -8rpx;
}

.desc-text {
  font-size: 24rpx;
  color: var(--td-text-color-placeholder, #bdbdbd);
  font-style: italic;
}

/* 关系证据 */
.evidence-section {
  background: var(--td-bg-color-secondarycontainer, #f8f9fa);
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.evidence-label {
  font-size: 22rpx;
  color: var(--td-text-color-secondary, #757575);
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.evidence-text {
  font-size: 24rpx;
  color: var(--td-text-color-primary, #212121);
  line-height: 1.5;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 2rpx solid var(--td-border-level-2-color, #f5f5f5);
  padding-top: 20rpx;
  margin-top: 4rpx;
}

.discovery-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.time-text {
  font-size: 22rpx;
  color: var(--td-text-color-placeholder, #bdbdbd);
}

/* 关系状态 */
.relationship-status {
  margin: 0 20rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.status-badge.discovered {
  background: var(--td-warning-color-1, #fffbf0);
  color: var(--td-warning-color, #ed6f00);
}

.status-badge.confirmed {
  background: var(--td-success-color-1, #e8f8f2);
  color: var(--td-success-color, #00a870);
}

.status-badge.ignored {
  background: var(--td-bg-color-component-disabled, #f5f5f5);
  color: var(--td-text-color-placeholder, #bdbdbd);
}

.status-text {
  font-size: 20rpx;
}

/* 快速操作按钮 */
.quick-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn.confirm {
  background: var(--td-success-color-1, #e8f8f2);
  border: 2rpx solid var(--td-success-color-3, #73d897);
}

.action-btn.confirm:active {
  background: var(--td-success-color-2, #d3f3e2);
  transform: scale(0.9);
}

.action-btn.ignore {
  background: var(--td-error-color-1, #fff1f0);
  border: 2rpx solid var(--td-error-color-3, #ffaaa6);
}

.action-btn.ignore:active {
  background: var(--td-error-color-2, #ffe1df);
  transform: scale(0.9);
}

/* 深色模式适配 */
.relationship-card.dark .type-text {
  color: var(--td-text-color-primary, #e0e0e0);
}

.relationship-card.dark .profile-name {
  color: var(--td-text-color-primary, #e0e0e0);
}

.relationship-card.dark .profile-details {
  color: var(--td-text-color-secondary, #bdbdbd);
}

.relationship-card.dark .evidence-section {
  background: var(--td-bg-color-secondarycontainer, #3a3a3a);
}

.relationship-card.dark .evidence-text {
  color: var(--td-text-color-primary, #e0e0e0);
}

.relationship-card.dark .card-footer {
  border-top-color: var(--td-border-level-2-color, #404040);
}

.relationship-card.dark .connection-icon {
  border-color: var(--td-bg-color-container, #2c2c2c);
}