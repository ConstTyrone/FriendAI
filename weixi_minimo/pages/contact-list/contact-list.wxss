/* 联系人列表页 - 现代化设计系统 */

/* ========== 设计系统变量 ========== */
page {
  /* 色彩系统 */
  --color-bg-primary: #F7F8FA;      /* 主背景色 - 参考微信指数 */
  --color-bg-card: #FFFFFF;         /* 卡片背景色 */
  --color-bg-secondary: #F5F6FA;    /* 次级背景色 */
  
  /* 文字色彩层次 */
  --color-text-primary: #1D1D1F;    /* 主文字 - 深黑 */
  --color-text-secondary: #6E6E73;  /* 次级文字 - 中灰 */  
  --color-text-tertiary: #8E8E93;   /* 辅助文字 - 浅灰 */
  --color-text-disabled: #C7C7CC;   /* 禁用文字 - 极浅灰 */
  
  /* 边框和分割线 */
  --color-border-light: #E5E5E7;    /* 浅边框 */
  --color-border-medium: #D1D1D6;   /* 中等边框 */
  
  /* 阴影系统 */
  --shadow-card: 0 2px 12px rgba(0, 0, 0, 0.06);        /* 卡片阴影 */
  --shadow-card-hover: 0 4px 20px rgba(0, 0, 0, 0.1);   /* 卡片悬浮阴影 */
  --shadow-search: 0 2px 8px rgba(0, 0, 0, 0.04);       /* 搜索框阴影 */
  
  /* 圆角系统 */
  --radius-large: 16rpx;   /* 大圆角 - 卡片 */
  --radius-medium: 12rpx;  /* 中圆角 - 按钮 */
  --radius-small: 8rpx;    /* 小圆角 - 标签 */
  --radius-round: 50%;     /* 圆形 - 头像 */
  
  /* 间距系统 */
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;
}

/* 深色模式变量覆盖 */
page.theme-dark {
  --color-bg-primary: #1A1A1A;
  --color-bg-card: #2D2D2D;
  --color-bg-secondary: #252525;
  --color-text-primary: #FFFFFF;
  --color-text-secondary: #A0A0A0;
  --color-text-tertiary: #6E6E73;
  --color-border-light: #3A3A3A;
  --color-border-medium: #4A4A4A;
  --shadow-card: 0 2px 12px rgba(0, 0, 0, 0.2);
}

/* 页面容器 */
.contact-list-page {
  min-height: 100vh;
  background: var(--color-bg-primary);
  padding-bottom: 200rpx;
  color: var(--color-text-primary);
  transition: all 0.3s ease;
}

/* 深色模式会自动通过CSS变量适配 */

/* AI搜索栏 */
.ai-search-header {
  background: var(--color-bg-card);
  padding: var(--space-md);
  border-bottom: 1rpx solid var(--color-border-light);
  box-shadow: var(--shadow-search);
  backdrop-filter: blur(10rpx);
}

.search-box-container {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: var(--color-bg-secondary);
  border-radius: var(--radius-medium);
  padding: 0 var(--space-md);
  height: 72rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-search);
}

.search-input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
  transform: translateY(-1rpx);
  background: var(--color-bg-card);
}

/* AI搜索图标 */
.search-ai-icon {
  font-size: 32rpx;
  margin-right: var(--space-sm);
  color: var(--color-text-secondary);
}

.search-input-wrapper:focus-within .search-ai-icon {
  color: #667eea;
}

/* 搜索输入框 */
.search-input {
  flex: 1;
  border: none;
  outline: none;
  background: transparent;
  font-size: 28rpx;
  color: var(--color-text-primary);
  height: 100%;
}

.search-input.ai-enhanced {
  font-size: 28rpx;
}

.search-placeholder {
  color: var(--color-text-tertiary);
}

.search-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  color: #000000;
  background: transparent;
}

.theme-dark .search-input {
  color: #ffffff;
}

.theme-dark .search-input::placeholder {
  color: #666666;
}

.search-placeholder {
  color: #999999;
  font-size: 28rpx;
}

.search-clear {
  padding: 12rpx 20rpx;
}

.clear-text {
  font-size: 26rpx;
  color: #666666;
}

.theme-dark .clear-text {
  color: #999999;
}

/* 统计信息卡片 */
.stats-section {
  padding: var(--space-sm) var(--space-md);
}

.stats-card {
  background: var(--color-bg-card);
  border-radius: var(--radius-large);
  padding: var(--space-lg);
  display: flex;
  align-items: center;
  justify-content: space-around;
  border: none;
  box-shadow: var(--shadow-card);
  transition: all 0.3s ease;
  margin-bottom: var(--space-sm);
}

.stats-card:hover {
  box-shadow: var(--shadow-card-hover);
  transform: translateY(-2rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-xs);
}

/* 数据数值 - 参考微信指数的大号数字显示 */
.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  line-height: 1;
  letter-spacing: -0.5rpx;
}

/* 数据标签 - 小号说明文字 */
.stat-label {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  line-height: 1;
  text-align: center;
}

/* 统计项分割线 */
.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: var(--color-border-light);
  opacity: 0.6;
}


/* 列表容器 */
.list-container {
  padding: 0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #E5E5E5;
  border-top-color: #000000;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 骨架屏加载 */
.skeleton-list {
  padding: 0 16rpx;
}

.skeleton-group {
  background: #FFFFFF;
  margin: 0 0 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #E5E5E5;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.skeleton-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #F5F5F5;
  position: relative;
}

.skeleton-item:last-child {
  border-bottom: none;
}

.skeleton-avatar {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 6rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.skeleton-content {
  flex: 1;
  min-width: 0;
}

.skeleton-line {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 4rpx;
  margin-bottom: 8rpx;
}

.skeleton-line:last-child {
  margin-bottom: 0;
}

.skeleton-line.name {
  height: 32rpx;
  width: 60%;
}

.skeleton-line.detail {
  height: 24rpx;
  width: 80%;
  margin-bottom: 12rpx;
}

.skeleton-line.tags {
  height: 20rpx;
  width: 40%;
}

@keyframes loading {
  0% { 
    background-position: 200% 0; 
  }
  100% { 
    background-position: -200% 0; 
  }
}

/* 深色模式骨架屏 */
.theme-dark .skeleton-group {
  background-color: #2d2d2d;
  border-color: #3a3a3a;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.2);
}

.theme-dark .skeleton-item {
  border-bottom-color: #3a3a3a;
}

.theme-dark .skeleton-avatar,
.theme-dark .skeleton-line {
  background: linear-gradient(90deg, #2d2d2d 25%, #3a3a3a 50%, #2d2d2d 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

/* 空状态 - 现代化设计 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-xl) var(--space-lg);
  margin: var(--space-lg) var(--space-md);
  background: var(--color-bg-card);
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-card);
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--space-sm);
  text-align: center;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  text-align: center;
  margin-bottom: var(--space-xl);
  line-height: 1.5;
  max-width: 400rpx;
}

.empty-button {
  padding: var(--space-md) var(--space-xl);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: var(--radius-medium);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.25);
  transition: all 0.3s ease;
}

.empty-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
}

.button-text {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
}

/* 联系人列表 */
.contact-list {
  padding: 0;
}

/* 滑动容器 */
.swipe-container {
  position: relative;
  margin: 0 16rpx 16rpx;
  overflow: hidden;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #E5E5E5;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.swipe-container:hover {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

.swipe-container.high-match {
  background: linear-gradient(135deg, rgba(7, 193, 96, 0.03), rgba(6, 174, 86, 0.03));
  border-left: 4rpx solid #07c160;
}

/* 滑动操作按钮区域 */
.swipe-actions {
  position: absolute;
  top: 0;
  right: -200rpx;
  height: 100%;
  width: 200rpx;
  display: flex;
  z-index: 1;
  transition: right 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 500;
  height: 100%;
  padding: 16rpx 4rpx;
  transition: all 0.2s ease;
  border: none;
  outline: none;
  box-sizing: border-box;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.action-edit {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
}

.action-delete {
  background: linear-gradient(135deg, #ff4757 0%, #ff3742 100%);
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
  display: block;
}

.action-text {
  font-size: 20rpx;
  font-weight: 500;
  opacity: 0.9;
}

.contact-group {
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  box-shadow: none;
  overflow: visible;
}

/* 联系人卡片 - 简洁单层设计 */
.contact-item {
  display: flex;
  align-items: center;
  padding: var(--space-lg) var(--space-md);
  position: relative;
  background: transparent;
  border-bottom: 1rpx solid var(--color-border-light);
  z-index: 2;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  width: 100%;
  will-change: transform;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item.swiped {
  transform: translateX(-200rpx);
  background: rgba(102, 126, 234, 0.02);
}

.contact-item.swiped + .swipe-actions {
  right: 0;
}

.contact-item:active {
  background: rgba(0, 0, 0, 0.02);
}

/* 高匹配联系人特殊样式 */
.contact-item.high-match {
  background: rgba(102, 126, 234, 0.04);
  border-left: 4rpx solid #667eea;
}

/* 联系人头像 - 现代化圆形设计 */
.item-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--space-md);
  flex-shrink: 0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

/* 头像文字 */
.avatar-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

/* 联系人内容区域 */
.item-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

/* 联系人姓名 - 主要信息 */
.item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  line-height: 1.1;
  margin: 0;
}

/* 公司职位 - 次要信息 */
.item-detail {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.1;
  margin: 2rpx 0 0 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 联系人标签 */
.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

.tag-wrapper {
  display: inline-flex;
  align-items: center;
  padding: 6rpx var(--space-sm);
  background: var(--color-bg-secondary);
  border-radius: var(--radius-small);
  border: none;
}

.tag-text {
  font-size: 20rpx;
  color: var(--color-text-tertiary);
  line-height: 1;
  font-weight: 500;
}

/* 匹配度指示器 */
.match-indicator {
  position: absolute;
  top: var(--space-sm);
  right: var(--space-sm);
  z-index: 3;
}

.match-badge {
  padding: 4rpx 8rpx;
  border-radius: var(--radius-small);
  font-size: 20rpx;
  font-weight: 600;
  line-height: 1;
}

.match-badge.high {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.match-badge.normal {
  background: rgba(255, 149, 0, 0.1);
  color: #ff9500;
}

/* 查看详情箭头 */
.item-arrow {
  font-size: 28rpx;
  color: var(--color-text-disabled);
  margin-left: var(--space-sm);
  opacity: 0.6;
}

/* 加载更多 */
.load-more {
  padding: 32rpx;
  text-align: center;
}

.load-more-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 48rpx;
  background: #F5F5F5;
  border-radius: 6rpx;
  position: relative;
}

.load-more-button.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.load-more-button:active {
  opacity: 0.7;
}

.load-more-button .button-text {
  color: #333333;
  font-size: 28rpx;
  font-weight: 500;
}

.load-more-button .loading-spinner {
  position: absolute;
  right: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #999999;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* 列表末尾 */
.list-end {
  padding: 32rpx;
  text-align: center;
}

.end-text {
  font-size: 26rpx;
  color: #999999;
}

/* 添加按钮 */
.add-button {
  position: fixed;
  right: 24rpx;
  bottom: 180rpx;
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.3);
  z-index: 9999;
  transition: all 0.3s ease;
}

.add-button:active {
  transform: scale(0.95);
}

.add-text {
  font-size: 44rpx;
  color: #FFFFFF;
  font-weight: 300;
  line-height: 1;
  transition: transform 0.3s ease;
}

.add-text.rotated {
  transform: rotate(45deg);
}

/* 添加菜单 */
.add-menu {
  position: fixed;
  right: 24rpx;
  bottom: 290rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  z-index: 9998;
  min-width: 240rpx;
  opacity: 0;
  transform: translateY(20rpx) scale(0.9);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  pointer-events: none;
  border: 2rpx solid #FF0000; /* 临时红边框用于调试 */
}

.add-menu.show {
  opacity: 1 !important;
  transform: translateY(0) scale(1) !important;
  pointer-events: auto;
  display: block !important;
}

.add-menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #E5E5E5;
  transition: background-color 0.2s ease;
}

.add-menu-item:last-child {
  border-bottom: none;
}

.add-menu-item:active {
  background: rgba(102, 126, 234, 0.06);
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

/* 添加菜单遮罩 */
.add-menu-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.1);
  z-index: 9997;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.add-menu-mask.show {
  opacity: 1;
  pointer-events: auto;
}

/* 操作菜单 */
.action-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1100; /* 提高z-index，确保在tabbar上方 */
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.25s;
}

.action-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.action-sheet {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 12rpx 12rpx 0 0;
  transform: translateY(100%); /* 隐藏时完全移出屏幕 */
  transition: transform 0.25s;
  /* 添加安全区域适配 */
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
  z-index: 1101; /* 确保在TabBar上方 */
}

.action-overlay.show .action-sheet {
  transform: translateY(0);
}

.sheet-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.sheet-avatar {
  width: 56rpx;
  height: 56rpx;
  background: #F5F5F5;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.sheet-info {
  flex: 1;
}

.sheet-name {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 2rpx;
  line-height: 1.2;
}

.sheet-company {
  display: block;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.2;
}

.sheet-actions {
  padding: 12rpx 0;
}

.sheet-button {
  padding: 24rpx 24rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.sheet-button:last-child {
  border-bottom: none;
}

.sheet-button:active {
  background: #FAFAFA;
}

.sheet-button.delete .button-text {
  color: #FF3B30;
}

.sheet-button .button-text {
  font-size: 30rpx;
  color: #000000;
  text-align: center;
  display: block;
}

/* 深色模式完整适配 */
.theme-dark .stats-card {
  background-color: #2d2d2d;
  border-color: #3a3a3a;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.theme-dark .stats-card:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.25);
  transform: translateY(-1rpx);
}

.theme-dark .stat-value {
  color: #ffffff;
}

.theme-dark .stat-label {
