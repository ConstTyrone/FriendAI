/* 关系图谱页面样式 */
.relationship-graph-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #f8faff 0%, #f0f4ff 100%);
  /* 全局模式为底部导航栏留出空间 */
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 顶部信息栏样式 */
.graph-header {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 32rpx 32rpx 24rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.25);
}

.header-info {
  margin-bottom: 24rpx;
}

.graph-title {
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  line-height: 1.2;
}

.title-subtitle {
  font-size: 28rpx;
  opacity: 0.85;
  font-weight: 400;
}

.graph-stats {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
  font-weight: 400;
}

.stat-divider {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 1rpx;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  background: rgba(255, 255, 255, 0.15) !important;
  border: 1rpx solid rgba(255, 255, 255, 0.3) !important;
  color: white !important;
  backdrop-filter: blur(10rpx);
}

/* 图谱容器样式 */
.graph-container {
  flex: 1;
  position: relative;
  overflow: hidden;
  margin: 16rpx;
  border-radius: 24rpx;
  background: white;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.graph-canvas-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  overflow: hidden;
}

/* 浮动控制按钮 */
.floating-controls {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  z-index: 10;
}

.control-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.float-btn {
  width: 64rpx !important;
  height: 64rpx !important;
  border-radius: 50% !important;
  background: transparent !important;
  border: none !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s ease !important;
}

.float-btn:active {
  transform: scale(0.95);
  background: rgba(99, 102, 241, 0.1) !important;
}

/* 中心节点选择弹窗样式 */
.center-selector-popup {
  max-height: 80vh;
  background: var(--td-bg-color-container);
  border-radius: 24rpx 24rpx 0 0;
  max-width: 100vw;
  overflow: hidden;
}

.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid var(--td-border-level-1-color);
  width: 100%;
  min-width: 0;
}

.selector-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--td-text-color-primary);
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.selector-search {
  padding: 24rpx 32rpx;
}

.selector-content {
  max-height: 60vh;
  overflow: hidden;
}

.contact-list {
  max-height: 60vh;
  padding: 0 32rpx 32rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--td-border-level-1-color);
  position: relative;
  transition: background-color 0.2s ease;
  width: 100%;
  min-width: 0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item.selected {
  background: var(--td-bg-color-secondarycontainer);
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  margin: 0 -16rpx;
}

.contact-item:active {
  background: var(--td-bg-color-secondarycontainer);
  border-radius: 12rpx;
}

.contact-info {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.contact-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--td-text-color-primary);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.contact-detail {
  display: flex;
  gap: 16rpx;
  font-size: 26rpx;
  color: var(--td-text-color-secondary);
}

.contact-company {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-width: 0;
}

.contact-position {
  flex-shrink: 0;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.contact-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
  flex-shrink: 0;
  margin-left: 8rpx;
}

.stat-text {
  font-size: 24rpx;
  color: var(--td-text-color-placeholder);
  white-space: nowrap;
}

/* 全屏模式样式 */
.fullscreen-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--td-bg-color-page);
}

.fullscreen-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 20;
  padding: var(--td-spacer-4);
  background: rgba(0, 0, 0, 0.1);
}

.fullscreen-graph {
  flex: 1;
  width: 100%;
  height: 100%;
}

/* 加载和错误状态样式 */
.loading-container,
.error-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  z-index: 10;
}

.error-text {
  font-size: 30rpx;
  color: var(--td-text-color-secondary);
  text-align: center;
  max-width: 400rpx;
}

/* 底部信息面板样式 */
.graph-footer {
  background: white;
  margin: 0 16rpx 16rpx;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.legend-section {
  margin-bottom: 32rpx;
}

.legend-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary);
}

.legend-list {
  display: flex;
  gap: 24rpx;
  padding: 8rpx 0;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: var(--td-bg-color-secondarycontainer);
  border-radius: 12rpx;
  flex-shrink: 0;
}

.legend-color {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.legend-text {
  font-size: 24rpx;
  color: var(--td-text-color-primary);
  font-weight: 500;
}

.legend-count {
  font-size: 22rpx;
  color: var(--td-text-color-secondary);
  margin-left: 4rpx;
}

.confidence-indicator {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.indicator-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary);
}

.confidence-scale {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.scale-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--td-text-color-secondary);
}

.scale-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.scale-item.high .scale-dot {
  background: #06ae56;
}

.scale-item.medium .scale-dot {
  background: #ff9800;
}

.scale-item.low .scale-dot {
  background: #9e9e9e;
}

.scale-line {
  width: 24rpx;
  height: 2rpx;
  background: var(--td-border-level-1-color);
}

/* 响应式设计 */
@media (max-width: 400px) {
  .graph-header {
    padding: 24rpx 16rpx 20rpx;
  }
  
  .graph-container {
    margin: 12rpx;
  }
  
  .graph-footer {
    margin: 0 12rpx 12rpx;
    padding: 20rpx;
  }
  
  .graph-stats {
    gap: 24rpx;
  }
  
  .contact-item {
    gap: 16rpx;
  }
  
  .contact-detail {
    gap: 12rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .fullscreen-header {
    background: rgba(255, 255, 255, 0.1);
  }
}