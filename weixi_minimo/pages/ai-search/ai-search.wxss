/* AI搜索页面 - 扁平设计风格 */

/* 页面容器 */
.ai-search-page {
  min-height: 100vh;
  background: #FAFAFA;
  padding-bottom: 200rpx;
}

/* 搜索容器 */
.search-container {
  background: #FFFFFF;
  padding: 32rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

/* 搜索输入框 */
.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  height: 88rpx;
}

.search-input {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  color: #000000;
  background: transparent;
}

.search-placeholder {
  color: #999999;
  font-size: 30rpx;
}

.search-action {
  margin-left: 20rpx;
  padding: 16rpx 32rpx;
  background: #000000;
  border-radius: 6rpx;
}

.search-action:active {
  opacity: 0.7;
}

.search-action-text {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
}

/* 搜索提示 */
.search-hint {
  margin-top: 16rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #999999;
}

/* 建议容器 */
.suggestions-container {
  padding: 32rpx;
}

.suggestions-section,
.history-section {
  margin-bottom: 40rpx;
}

.suggestions-section:last-child,
.history-section:last-child {
  margin-bottom: 0;
}

/* 区块标签 */
.section-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 20rpx;
  display: block;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.clear-history {
  font-size: 26rpx;
  color: #999999;
  padding: 8rpx 16rpx;
}

/* 建议列表 */
.suggestion-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.suggestion-item {
  padding: 16rpx 28rpx;
  background: #000000;
  border-radius: 6rpx;
}

.suggestion-item:active {
  opacity: 0.7;
}

.suggestion-text {
  color: #FFFFFF;
  font-size: 28rpx;
}

/* 历史列表 */
.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-item {
  padding: 16rpx 28rpx;
  background: #FFFFFF;
  border: 1rpx solid #E5E5E5;
  border-radius: 6rpx;
}

.history-item:active {
  background: #F8F8F8;
}

.history-text {
  color: #333333;
  font-size: 28rpx;
}

/* 搜索结果容器 */
.results-container {
  padding: 32rpx;
}

/* 搜索查询栏 */
.search-query-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.query-text {
  font-size: 30rpx;
  color: #000000;
  font-weight: 500;
}

.result-count {
  font-size: 26rpx;
  color: #999999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #E5E5E5;
  border-top-color: #000000;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
  text-align: center;
}

.empty-action {
  padding: 20rpx 48rpx;
  background: #000000;
  border-radius: 6rpx;
}

.empty-action:active {
  opacity: 0.7;
}

.action-text {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
}

/* 结果列表 */
.results-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* AI分析 */
.ai-analysis {
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #E5E5E5;
}

.analysis-header {
  margin-bottom: 16rpx;
}

.analysis-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.analysis-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 结果卡片 */
.result-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-card {
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 24rpx;
  border: 1rpx solid #E5E5E5;
}

.result-card.high-match {
  border-color: #4CAF50;
}

.result-card:active {
  background: #F8F8F8;
}

.card-main {
  display: flex;
  align-items: flex-start;
}

.card-avatar {
  width: 80rpx;
  height: 80rpx;
  background: #F0F0F0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #666666;
}

.card-content {
  flex: 1;
  min-width: 0;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.contact-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
}

.match-badge {
  font-size: 22rpx;
  color: #4CAF50;
  padding: 4rpx 12rpx;
  background: #E8F5E9;
  border-radius: 4rpx;
}

.contact-info {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.contact-tags {
  margin-bottom: 12rpx;
}

.tag-wrapper {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-height: 28rpx;
  padding: 4rpx 12rpx;
  margin-right: 8rpx;
  margin-bottom: 4rpx;
  background: #F7F7F7;
  border: 1rpx solid #E8E8E8;
  border-radius: 14rpx;
  box-sizing: border-box;
}

.tag-text {
  font-size: 22rpx;
  color: #666666;
  line-height: 20rpx;
  display: block;
}

.contact-summary {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  margin-top: 12rpx;
}

.card-footer {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.match-score {
  display: flex;
  align-items: center;
}

.score-text {
  font-size: 24rpx;
  color: #999999;
}

/* 快速访问 */
.quick-access {
  padding: 32rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.quick-item {
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  text-align: center;
  border: 1rpx solid #E5E5E5;
}

.quick-item:active {
  background: #F8F8F8;
}

.quick-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

/* 搜索帮助 */
.search-help {
  padding: 32rpx;
}

.help-content {
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 24rpx;
  border: 1rpx solid #E5E5E5;
}

.help-item {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .search-container {
    padding: 24rpx;
  }
  
  .suggestions-container,
  .results-container,
  .quick-access,
  .search-help {
    padding: 24rpx;
  }
  
  .quick-grid {
    gap: 12rpx;
  }
  
  .quick-item {
    padding: 24rpx;
  }
}