/* 联系人详情页 - 扁平设计风格 */

/* 页面容器 */
.detail-page {
  min-height: 100vh;
  background: #FAFAFA;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom)); /* 为底部按钮留出空间 */
}

/* 精简布局，减少信息区块的内边距 */
.detail-content {
  padding: 20rpx;
}

/* 深色模式适配 */
.detail-page.theme-dark {
  background-color: #1a1a1a;
  color: #ffffff;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #E5E5E5;
  border-top-color: #000000;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 骨架屏加载 */
.skeleton-detail {
  padding: 0;
}

.skeleton-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: #FFFFFF;
  margin: 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid #E5E5E5;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.skeleton-header-avatar {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.skeleton-header-info {
  text-align: center;
  width: 100%;
}

.skeleton-header-line {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 4rpx;
  margin: 0 auto 12rpx;
}

.skeleton-header-line.name {
  height: 36rpx;
  width: 60%;
}

.skeleton-header-line.company {
  height: 28rpx;
  width: 80%;
}

.skeleton-header-line.position {
  height: 26rpx;
  width: 50%;
}

.skeleton-section {
  background: #FFFFFF;
  margin: 16rpx 24rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 1rpx solid #E5E5E5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.skeleton-section-title {
  height: 24rpx;
  width: 30%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
}

.skeleton-info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.skeleton-info-item:last-child {
  border-bottom: none;
}

.skeleton-info-label {
  width: 120rpx;
  height: 28rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 4rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.skeleton-info-value {
  flex: 1;
  height: 28rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 4rpx;
}

.skeleton-info-value.short {
  width: 40%;
}

.skeleton-info-value.medium {
  width: 60%;
}

.skeleton-info-value.long {
  width: 80%;
}

/* 深色模式骨架屏 */
.theme-dark .skeleton-header {
  background-color: #2d2d2d;
  border-color: #3a3a3a;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.theme-dark .skeleton-section {
  background-color: #2d2d2d;
  border-color: #3a3a3a;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.theme-dark .skeleton-info-item {
  border-bottom-color: #3a3a3a;
}

.theme-dark .skeleton-header-avatar,
.theme-dark .skeleton-header-line,
.theme-dark .skeleton-section-title,
.theme-dark .skeleton-info-label,
.theme-dark .skeleton-info-value {
  background: linear-gradient(90deg, #2d2d2d 25%, #3a3a3a 50%, #2d2d2d 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.error-message {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 32rpx;
  text-align: center;
}

.error-action {
  padding: 20rpx 48rpx;
  background: #000000;
  border-radius: 6rpx;
}

.error-action:active {
  opacity: 0.7;
}

.action-text {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
}

/* 详情内容 */
.detail-content {
  padding: 0;
}

/* 头部信息 */
.header-section {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: #FFFFFF;
  margin: 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid #E5E5E5;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.header-section:hover {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

/* 头部电话按钮 */
.header-phone-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 72rpx;
  height: 72rpx;
  background: #000000;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.header-phone-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.phone-icon {
  font-size: 32rpx;
  color: #FFFFFF;
}

.header-avatar {
  width: 120rpx;
  height: 120rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.avatar-text {
  font-size: 48rpx;
  font-weight: 500;
  color: #666666;
}

.header-info {
  text-align: center;
}

.header-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
}

.header-company {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 4rpx;
}

.header-position {
  display: block;
  font-size: 26rpx;
  color: #999999;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding: 0 24rpx 24rpx;
}

.action-button {
  flex: 1;
  max-width: 200rpx;
  padding: 16rpx;
  background: #000000;
  border-radius: 6rpx;
  text-align: center;
}

.action-button:active {
  opacity: 0.7;
}

.action-label {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
}

/* 信息区块 - 调整为更紧凑的布局 */
.info-section {
  background: #FFFFFF;
  margin: 16rpx 24rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 1rpx solid #E5E5E5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.info-section:hover {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-1rpx);
}

.section-title {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-list {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item:active {
  background: #FAFAFA;
  margin: 0 -24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.info-label {
  font-size: 28rpx;
  color: #999999;
  width: 120rpx;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.info-arrow {
  font-size: 32rpx;
  color: #C0C0C0;
  margin-left: 16rpx;
}

/* AI描述区域 - 优化样式 */
.ai-section {
  background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
  border: 1rpx solid #e3e8f0;
}

.ai-section .ai-content {
  padding-top: 12rpx;
}

.ai-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  background: rgba(255, 255, 255, 0.6);
  padding: 16rpx;
  border-radius: 8rpx;
}

/* 备注内容 */
.notes-content {
  padding-top: 8rpx;
}

.notes-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 标签列表 */
.tag-list {
  padding-top: 8rpx;
}

.tag-wrapper {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-height: 28rpx;
  padding: 4rpx 12rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
  background: #F7F7F7;
  border: 1rpx solid #E8E8E8;
  border-radius: 14rpx;
  box-sizing: border-box;
}

.tag-text {
  font-size: 22rpx;
  color: #666666;
  line-height: 20rpx;
  display: block;
}

/* 信息来源 */
.source-section {
  margin-bottom: 24rpx;
}

.source-section .section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  cursor: pointer;
}

.expand-icon {
  font-size: 32rpx;
  color: #999999;
  transform: rotate(0deg);
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(90deg);
}

.source-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  padding: 0 32rpx;
}

.source-content.expanded {
  max-height: 1000rpx;
  padding: 0 32rpx 32rpx;
}

.source-tip {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 24rpx;
  background: #F8F8F8;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
}

.source-messages {
  /* 容器样式 */
}

.source-message {
  background: #FFFFFF;
  border: 1rpx solid #E5E5E5;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}

.source-message:last-child {
  margin-bottom: 0;
}

.message-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 20rpx;
  background: #F8F9FA;
  border-bottom: 1rpx solid #E5E5E5;
}

.message-time {
  font-size: 24rpx;
  color: #666666;
}

.message-type {
  font-size: 22rpx;
  color: #007AFF;
  background: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.message-action {
  font-size: 22rpx;
  color: #FF6B35;
  background: rgba(255, 107, 53, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: auto;
}

.message-content {
  padding: 16rpx 20rpx;
}

.content-text {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.6;
  word-break: break-all;
}

.message-id {
  padding: 8rpx 20rpx;
  border-top: 1rpx solid #F0F0F0;
  background: #FAFAFA;
}

.id-text {
  font-size: 22rpx;
  color: #999999;
  font-family: monospace;
}

/* 时间信息 */
.time-info {
  padding: 24rpx;
  text-align: center;
}

.time-text {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.time-text:last-child {
  margin-bottom: 0;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #FFFFFF;
  border-top: 1rpx solid #E5E5E5;
  z-index: 1001; /* 确保在TabBar(1000)上方 */
  /* 适配iPhone底部安全区域 */
  padding-bottom: env(safe-area-inset-bottom);
}

.bar-button {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  border-right: 1rpx solid #E5E5E5;
}

.bar-button:last-child {
  border-right: none;
}

.bar-button:active {
  background: #F5F5F5;
}

.bar-button.delete .bar-text {
  color: #FF3B30;
}

.bar-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
}

/* 删除确认对话框 */
.confirm-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.confirm-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.confirm-dialog {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 40rpx;
}

.confirm-title {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: #000000;
  text-align: center;
  margin-bottom: 24rpx;
}

.confirm-message {
  display: block;
  font-size: 30rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.confirm-actions {
  display: flex;
  gap: 24rpx;
}

.confirm-button {
  flex: 1;
  padding: 20rpx;
  border-radius: 6rpx;
  text-align: center;
}

.confirm-button.cancel {
  background: #F5F5F5;
}

.confirm-button.delete {
  background: #FF3B30;
}

.confirm-button:active {
  opacity: 0.7;
}

.confirm-button.cancel .button-text {
  color: #333333;
  font-size: 30rpx;
  font-weight: 500;
}

.confirm-button.delete .button-text {
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
}

