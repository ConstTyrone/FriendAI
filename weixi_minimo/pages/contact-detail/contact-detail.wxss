/* 关系统计 */
.relationship-stats {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #ffffff;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.9;
  font-weight: 400;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
}

/* 关系预览 */
.relationship-preview {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.relationship-preview-item {
  display: flex;
  align-items: center;
  background: var(--td-bg-color-component, #f5f5f5);
  border-radius: 12rpx;
  padding: 16rpx;
  transition: all 0.2s ease;
}

.relationship-preview-item:active {
  background: var(--td-bg-color-component-disabled, #e6e6e6);
  transform: scale(0.98);
}

.preview-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.preview-avatar-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.preview-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.preview-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--td-text-color-primary, #212121);
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.preview-relation {
  font-size: 24rpx;
  color: var(--td-text-color-secondary, #757575);
  line-height: 1.2;
}

.preview-status {
  margin-left: 16rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  text-align: center;
  min-width: 80rpx;
}

.preview-status.discovered {
  background: var(--td-warning-color-1, #fff3e0);
  color: var(--td-warning-color, #ff9800);
}

.preview-status.confirmed {
  background: var(--td-success-color-1, #e8f8f2);
  color: var(--td-success-color, #00a870);
}

.preview-status.ignored {
  background: var(--td-error-color-1, #ffeaea);
  color: var(--td-error-color, #d54941);
}

/* 关系空状态 */
.relationship-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 32rpx;
  text-align: center;
}

.empty-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  opacity: 0.8;
}

.empty-icon .icon-text {
  font-size: 48rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--td-text-color-secondary, #757575);
  line-height: 1.6;
  margin-bottom: 24rpx;
  max-width: 300rpx;
}

.empty-action {
  background: var(--td-brand-color, #0052d9);
  color: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.empty-action:active {
  background: var(--td-brand-color-8, #0042b6);
  transform: scale(0.98);
}

.empty-action .action-text {
  color: #ffffff;
}

/* 底部按钮徽章 */
.button-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: var(--td-error-color, #d54941);
  color: #ffffff;
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  min-width: 36rpx;
}

.badge-text {
  color: #ffffff;
}

/* 调整底部按钮样式 */
.bottom-bar .bar-button {
  position: relative;
}

/* 深色模式适配 */
.detail-page.dark .relationship-preview-item {
  background: var(--td-bg-color-component, #404040);
}

.detail-page.dark .relationship-preview-item:active {
  background: var(--td-bg-color-component-disabled, #333333);
}

.detail-page.dark .preview-name {
  color: var(--td-text-color-primary, #e0e0e0);
}

.detail-page.dark .preview-relation {
  color: var(--td-text-color-secondary, #bdbdbd);
}

.detail-page.dark .empty-desc {
  color: var(--td-text-color-secondary, #bdbdbd);
}

.detail-page.dark .action-text {
  color: var(--td-text-color-secondary, #bdbdbd);
}