/* 联系人表单页 - 扁平设计风格 */

/* 页面容器 */
.form-page {
  min-height: 100vh;
  background: #FAFAFA;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #E5E5E5;
  border-top-color: #000000;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 表单内容 */
.form-content {
  padding: 0;
}

/* 表单区块 */
.form-section {
  background: #FFFFFF;
  margin: 16rpx 24rpx;
  border-radius: 8rpx;
  padding: 24rpx;
  border: 1rpx solid #E5E5E5;
}

.section-title {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

/* 表单组 */
.form-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  min-width: 100rpx;
  flex-shrink: 0;
}

.form-label.required::before {
  content: "*";
  color: #FF3B30;
  margin-right: 4rpx;
}

.form-input {
  flex: 1;
  height: 64rpx;
  padding: 0 20rpx;
  background: #F8F8F8;
  border-radius: 6rpx;
  font-size: 28rpx;
  color: #000000;
  border: 1rpx solid transparent;
  transition: border-color 0.2s;
}

.form-input.error {
  border-color: #FF3B30;
  background: #FFF5F5;
}

.form-input:focus {
  border-color: #000000;
}

/* 错误消息 */
.error-message {
  display: block;
  font-size: 24rpx;
  color: #FF3B30;
  margin: 8rpx 0;
  padding: 8rpx 16rpx;
  background: #FFF5F5;
  border-radius: 6rpx;
  border-left: 3rpx solid #FF3B30;
}

/* 添加标签按钮 */
.add-tag-button {
  padding: 8rpx 16rpx;
  background: #000000;
  border-radius: 4rpx;
}

.add-tag-button:active {
  opacity: 0.7;
}

.add-tag-button .button-text {
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 500;
}

/* 标签容器 */
.tags-container {
  margin-top: 16rpx;
}

.tag-item {
  display: inline-block;
  background: #F5F5F5;
  border: 1rpx solid #E5E5E5;
  border-radius: 20rpx;
  padding: 6rpx 16rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  position: relative;
}

.tag-text {
  font-size: 24rpx;
  color: #333333;
  padding-right: 20rpx;
}

.tag-close {
  position: absolute;
  right: 6rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-text {
  font-size: 20rpx;
  color: #999999;
  line-height: 1;
}

/* 空状态 */
.empty-tags {
  padding: 32rpx;
  text-align: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999999;
}

/* 标签输入 */
.tag-input-container {
  margin-top: 16rpx;
  background: #F8F8F8;
  border-radius: 6rpx;
  padding: 16rpx;
}

.tag-input {
  width: 100%;
  height: 48rpx;
  padding: 0 12rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  font-size: 26rpx;
  color: #000000;
  border: 1rpx solid #E5E5E5;
  margin-bottom: 12rpx;
}

.tag-input-actions {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.input-button {
  padding: 8rpx 20rpx;
  border-radius: 4rpx;
  text-align: center;
}

.input-button.cancel {
  background: #F5F5F5;
}

.input-button.confirm {
  background: #000000;
}

.input-button.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.input-button:active {
  opacity: 0.7;
}

.input-button.cancel .button-text {
  color: #666666;
  font-size: 24rpx;
}

.input-button.confirm .button-text {
  color: #FFFFFF;
  font-size: 24rpx;
}

/* 文本域 */
.textarea-container {
  position: relative;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 16rpx;
  background: #F8F8F8;
  border-radius: 6rpx;
  font-size: 28rpx;
  color: #000000;
  border: 1rpx solid #E5E5E5;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  bottom: 12rpx;
  right: 16rpx;
  font-size: 22rpx;
  color: #999999;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #FFFFFF;
  border-top: 1rpx solid #E5E5E5;
  z-index: 100;
}

.bar-button {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  border-right: 1rpx solid #E5E5E5;
  position: relative;
}

.bar-button:last-child {
  border-right: none;
}

.bar-button.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.bar-button:active {
  background: #F5F5F5;
}

.bar-button.primary {
  background: #000000;
}

.bar-button.primary:active {
  background: #333333;
}

.bar-button.primary .bar-text {
  color: #FFFFFF;
}

.bar-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
}

.saving-spinner {
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* 确认对话框 */
.confirm-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.confirm-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.confirm-dialog {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 40rpx;
}

.confirm-title {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: #000000;
  text-align: center;
  margin-bottom: 24rpx;
}

.confirm-message {
  display: block;
  font-size: 30rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.confirm-actions {
  display: flex;
  gap: 24rpx;
}

.confirm-button {
  flex: 1;
  padding: 20rpx;
  border-radius: 6rpx;
  text-align: center;
}

.confirm-button.cancel {
  background: #F5F5F5;
}

.confirm-button.confirm {
  background: #000000;
}

.confirm-button:active {
  opacity: 0.7;
}

.confirm-button.cancel .button-text {
  color: #333333;
  font-size: 30rpx;
  font-weight: 500;
}

.confirm-button.confirm .button-text {
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .form-section {
    margin: 12rpx 16rpx;
    padding: 20rpx;
  }
  
  .section-title {
    font-size: 22rpx;
  }
  
  .form-item {
    gap: 16rpx;
  }
  
  .form-label {
    font-size: 26rpx;
    min-width: 80rpx;
  }
  
  .form-input {
    height: 56rpx;
    font-size: 26rpx;
    padding: 0 16rpx;
  }
  
  .form-textarea {
    min-height: 140rpx;
    font-size: 26rpx;
    padding: 14rpx;
  }
  
  .bar-button {
    padding: 20rpx;
  }
  
  .bar-text {
    font-size: 30rpx;
  }
  
  .confirm-dialog {
    width: 520rpx;
    padding: 32rpx;
  }
}