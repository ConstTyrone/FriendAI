  white-space: nowrap;
  border: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.intent-type:hover {
  transform: scale(1.05);
}

/* AIå¼ºåŒ–å¾½ç«  */
.ai-badge {
  font-size: 18rpx;
