/* CSSå˜é‡å®šä¹‰ */
.intent-page {
  --primary-color: #000000;
  --primary-green: #06ae56;
  --background-color: #FAFAFA;
  --card-background: #FFFFFF;
  --text-primary: #000000;
  --text-secondary: #333333;
  --text-tertiary: #666666;
  --text-quaternary: #999999;
  --border-color: #E5E5E5;
  --border-light: #F0F0F0;
  --shadow-light: rgba(0, 0, 0, 0.04);
  --shadow-medium: rgba(0, 0, 0, 0.08);
  --shadow-heavy: rgba(0, 0, 0, 0.12);
  --radius-small: 8rpx;
  --radius-medium: 12rpx;
  --radius-large: 16rpx;
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
}

/* é¡µé¢å®¹å™¨ */
.intent-page {
  min-height: 100vh;
  background: var(--background-color);
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
  transition: background-color 0.3s ease;
}

/* é¡¶éƒ¨æ“ä½œæ  - ç°ä»£åŒ–å‡çº§ */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: calc(var(--spacing-lg) + env(safe-area-inset-top)) var(--spacing-lg) var(--spacing-lg);
  background: var(--card-background);
  border-bottom: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 12rpx var(--shadow-light);
  transition: all 0.3s ease;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.5rpx;
  transition: color 0.3s ease;
}

.create-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: 10rpx 20rpx;
  background: var(--primary-color);
  border-radius: var(--radius-small);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transform: translateY(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.create-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  opacity: 0.9;
}

.btn-icon {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 400;
}

.btn-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 400;
}

/* ç»Ÿè®¡å¡ç‰‡ - ç°ä»£åŒ–è®¾è®¡ */
.stats-card {
  display: flex;
  justify-content: space-around;
  margin: var(--spacing-md);
  padding: var(--spacing-xl) var(--spacing-lg);
  background: var(--card-background);
  border-radius: var(--radius-large);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 8rpx 32rpx var(--shadow-light);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.stats-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-green) 0%, rgba(6, 174, 86, 0.6) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.stats-card:hover::before {
  opacity: 1;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xs);
  position: relative;
  min-width: 120rpx;
  padding: var(--spacing-sm) 0;
  transition: transform 0.3s ease;
}

.stat-item:hover {
  transform: translateY(-4rpx);
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-green);
  line-height: 1;
  margin-bottom: 4rpx;
  background: linear-gradient(135deg, #06ae56 0%, rgba(6, 174, 86, 0.8) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-variant-numeric: tabular-nums;
}

.stat-label {
  font-size: 26rpx;
  color: var(--text-tertiary);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* åŠ è½½çŠ¶æ€ */
