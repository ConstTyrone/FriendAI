  color: #999999;
}

/* æ„å›¾åˆ—è¡¨ - ç°ä»£åŒ–è®¾è®¡ */
.intent-list {
  padding: 0 var(--spacing-md);
}

.intent-card {
  background: var(--card-background);
  border-radius: var(--radius-large);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 4rpx 20rpx var(--shadow-light);
  position: relative;
  overflow: hidden;
  transform: translateY(0);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.intent-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, var(--primary-green) 0%, rgba(6, 174, 86, 0.6) 100%);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.intent-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 40rpx var(--shadow-medium);
}

.intent-card:hover::before {
  transform: scaleY(1);
}

.intent-card:active {
  transform: translateY(-2rpx);
}

.intent-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
  position: relative;
}

.intent-info {
  display: flex;
