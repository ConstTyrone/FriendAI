/* 匹配结果页面样式 */

.matches-page {
  height: 100vh;
  background: #f5f5f5;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: calc(72rpx + env(safe-area-inset-top)) 32rpx 48rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

.back-button {
  position: absolute;
  left: 32rpx;
  font-size: 36rpx;
  color: #000;
  padding: 8rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
  text-align: center;
}

/* AI状态指示器 */
.ai-indicator {
  margin-left: auto;
}

.ai-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* 底部触发按钮（滑动到底部显示） */
.bottom-trigger {
  padding: 32rpx;
  margin: 64rpx 0 32rpx;
  text-align: center;
  min-height: 200rpx;
}

.trigger-match-btn {
  width: 60%;
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  border: none;
  font-weight: 500;
}

.trigger-match-btn:active {
  opacity: 0.8;
}

/* 匹配列表 */
.match-list {
  padding: 24rpx;
}

.match-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
  transition: all 0.3s ease;
}

/* 高亮的匹配卡片 */
.match-card.highlighted {
  background: linear-gradient(to right, #fff5e6 0%, #fff 100%);
  border: 2rpx solid #ff9500;
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.2);
  animation: highlight-pulse 1s ease-in-out;
}

@keyframes highlight-pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    transform: scale(1);
  }
}

/* 匹配头部 */
.match-header {
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.match-score-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.intent-name {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

/* AI匹配标识 */
.ai-match-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
  margin-left: 12rpx;
}

.match-score {
  font-size: 26rpx;
  font-weight: 500;
  color: #52c41a;
}

/* 向量相似度评分 */
.vector-score {
  font-size: 22rpx;
  color: #722ed1;
  background: #f9f0ff;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 12rpx;
}

/* 联系人信息 */
.profile-section {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.profile-avatar {
  width: 80rpx;
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

.profile-title {
  font-size: 26rpx;
  color: #666;
}

.profile-location {
  font-size: 24rpx;
  color: #999;
}

.view-arrow {
  font-size: 36rpx;
  color: #c0c0c0;
}

/* 匹配解释 */
.match-explanation {
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin: 16rpx 0;
}

.explanation-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.explanation-text {
  font-size: 26rpx;
  color: #333;
}

/* 匹配亮点 */
.match-highlights {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin: 16rpx 0;
}

.highlight-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 16rpx;
}

.tag-icon {
  font-size: 20rpx;
  color: #1890ff;
  margin-right: 8rpx;
}

.tag-text {
  font-size: 24rpx;
  color: #1890ff;
}

/* 底部信息 */
.match-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.match-time {
  font-size: 24rpx;
  color: #999;
}

.match-type-wrapper {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-height: 28rpx;
  padding: 4rpx 12rpx;
  background: #F7F7F7;
  border-radius: 12rpx;
}

.match-type-text {
  font-size: 22rpx;
  color: #666666;
  line-height: 20rpx;
  display: block;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 32rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* ===== 深色模式适配 ===== */

/* 页面容器 */
.matches-page.theme-dark {
  background: #1a1a1a;
}

/* 页面头部 */
.theme-dark .page-header {
  background: #2d2d2d;
  border-bottom-color: #3a3a3a;
}

.theme-dark .back-button {
  color: #ffffff;
}

.theme-dark .page-title {
  color: #ffffff;
}

/* 底部触发按钮深色模式 */
.theme-dark .bottom-trigger {
  /* 深色模式下底部按钮区域无需特殊背景 */
}

.theme-dark .trigger-match-btn {
  background: #06ae56;
  color: #ffffff;
}

/* 匹配列表深色模式 */
.theme-dark .match-card {
  background: #2d2d2d;
  border: 1rpx solid #3a3a3a;
}

.theme-dark .match-card.highlighted {
  background: linear-gradient(to right, rgba(6, 174, 86, 0.1) 0%, #2d2d2d 100%);
  border-color: #06ae56;
  box-shadow: 0 4rpx 16rpx rgba(6, 174, 86, 0.2);
}

.theme-dark .match-header {
  border-bottom-color: #3a3a3a;
}

.theme-dark .intent-name {
  color: #cccccc;
}

.theme-dark .match-score {
  color: #06ae56;
}

.theme-dark .vector-score {
  color: #9254de;
  background: #2b1b3a;
}

.theme-dark .profile-avatar {
  background: #3a3a3a;
}

.theme-dark .avatar-text {
  color: #ffffff;
}

.theme-dark .profile-name {
  color: #ffffff;
}

.theme-dark .profile-title {
  color: #cccccc;
}

.theme-dark .profile-location {
  color: #999999;
}

.theme-dark .view-arrow {
