}

.theme-dark .match-explanation {
  background: #252525;
}

.theme-dark .explanation-label {
  color: #999999;
}

.theme-dark .explanation-text {
  color: #cccccc;
}

.theme-dark .highlight-tag {
  background: #1e3a32;
  border-color: #06ae56;
}

.theme-dark .tag-icon {
  color: #06ae56;
}

.theme-dark .tag-text {
  color: #06ae56;
}

.theme-dark .match-footer {
  border-top-color: #3a3a3a;
}

.theme-dark .match-time {
  color: #999999;
}

.theme-dark .match-type-wrapper {
  background: #3a3a3a;
}

.theme-dark .match-type-text {
  color: #cccccc;
}

.theme-dark .empty-title {
  color: #ffffff;
}

.theme-dark .empty-desc {
  color: #999999;
}

.theme-dark .loading-text {
  color: #999999;
}