/* 匹配结果页面样式 */

.matches-page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.back-button {
  font-size: 36rpx;
  color: #000;
  margin-right: 24rpx;
  padding: 8rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
  flex: 1;
}

/* AI状态指示器 */
.ai-indicator {
  margin-left: auto;
}

.ai-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* 操作栏 */
.action-bar {
  padding: 16rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  justify-content: flex-end;
}

.trigger-match-btn {
  background: #1890ff;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
}

/* 匹配列表 */
.match-list {
  padding: 24rpx;
}

.match-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

/* 匹配头部 */
.match-header {
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.match-score-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.intent-name {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

/* AI匹配标识 */
.ai-match-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
  margin-left: 12rpx;
}

.match-score {
  font-size: 26rpx;
  font-weight: 500;
  color: #52c41a;
}

/* 向量相似度评分 */
.vector-score {
  font-size: 22rpx;
  color: #722ed1;
  background: #f9f0ff;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 12rpx;
}

/* 联系人信息 */
.profile-section {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.profile-avatar {
  width: 80rpx;
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

.profile-title {
  font-size: 26rpx;
  color: #666;
}

.profile-location {
  font-size: 24rpx;
  color: #999;
}

.view-arrow {
  font-size: 36rpx;
  color: #c0c0c0;
}

/* 匹配解释 */
.match-explanation {
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin: 16rpx 0;
}

.explanation-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.explanation-text {
  font-size: 26rpx;
  color: #333;
}

/* 匹配亮点 */
.match-highlights {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin: 16rpx 0;
}

.highlight-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 16rpx;
}

.tag-icon {
  font-size: 20rpx;
  color: #1890ff;
  margin-right: 8rpx;
}

.tag-text {
  font-size: 24rpx;
  color: #1890ff;
}

/* 底部信息 */
.match-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.match-time {
  font-size: 24rpx;
  color: #999;
}

.match-type-wrapper {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-height: 28rpx;
  padding: 4rpx 12rpx;
  background: #F7F7F7;
  border-radius: 12rpx;
}

.match-type-text {
  font-size: 22rpx;
  color: #666666;
  line-height: 20rpx;
  display: block;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 32rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}