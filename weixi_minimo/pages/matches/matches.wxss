  --primary-color: #06ae56;
  --primary-green: #06ae56;
  --background-color: #1a1a1a;
  --card-background: #2d2d2d;
  --text-primary: #ffffff;
  --text-secondary: #cccccc;
  --text-tertiary: #999999;
  --text-quaternary: #666666;
  --border-color: #3a3a3a;
  --border-light: #404040;
  --shadow-light: rgba(0, 0, 0, 0.3);
  --shadow-medium: rgba(0, 0, 0, 0.4);
  --shadow-heavy: rgba(0, 0, 0, 0.5);
  background: var(--background-color);
}

/* 页面头部 */
.theme-dark .page-header {
  background: #2d2d2d;
  border-bottom-color: #3a3a3a;
}

.theme-dark .back-button {
  color: #ffffff;
}

.theme-dark .page-title {
  color: #ffffff;
}

/* 底部触发按钮深色模式 */
.theme-dark .bottom-trigger {
  /* 深色模式下底部按钮区域无需特殊背景 */
}

.theme-dark .trigger-match-btn {
  background: #06ae56;
  color: #ffffff;
}

/* 匹配列表深色模式 */
.theme-dark .match-card {
  background: #2d2d2d;
  border: 1rpx solid #3a3a3a;
}

.theme-dark .match-card.highlighted {
  background: linear-gradient(to right, rgba(6, 174, 86, 0.1) 0%, #2d2d2d 100%);
  border-color: #06ae56;
  box-shadow: 0 4rpx 16rpx rgba(6, 174, 86, 0.2);
}

.theme-dark .match-header {
  border-bottom-color: #3a3a3a;
}

.theme-dark .intent-name {
  color: #cccccc;
}

.theme-dark .match-score {
  color: var(--primary-green);
}

/* 深色模式进度条 - 新增 */
.theme-dark .score-progress {
  background: rgba(6, 174, 86, 0.2);
}

.theme-dark .progress-bar {
  background: linear-gradient(90deg, var(--primary-green) 0%, rgba(6, 174, 86, 0.9) 100%);
}

.theme-dark .vector-score {
  color: #9254de;
  background: #2b1b3a;
}

.theme-dark .profile-avatar {
  background: linear-gradient(135deg, #3a3a3a 0%, #2d2d2d 100%);
  border-color: var(--border-color);
}

.theme-dark .profile-section:hover .profile-avatar {
  border-color: var(--primary-green);
}

.theme-dark .avatar-text {
  color: #ffffff;
}

.theme-dark .profile-name {
  color: #ffffff;
}

.theme-dark .profile-title {
  color: #cccccc;
}

.theme-dark .profile-location {
  color: #999999;
}

.theme-dark .view-arrow {
  color: #666666;
}

.theme-dark .match-explanation {
  background: #252525;
}

.theme-dark .explanation-label {
  color: #999999;
}

.theme-dark .explanation-text {
  color: #cccccc;
}

.theme-dark .highlight-tag {
  background: #1e3a32;
  border-color: #06ae56;
}

.theme-dark .tag-icon {
  color: #06ae56;
}

.theme-dark .tag-text {
  color: #06ae56;
}

.theme-dark .match-footer {
  border-top-color: #3a3a3a;
}

.theme-dark .match-time {
  color: #999999;
}

.theme-dark .match-type-wrapper {
  background: #3a3a3a;
}

.theme-dark .match-type-text {
  color: #cccccc;
}

.theme-dark .empty-title {
  color: #ffffff;
}

.theme-dark .empty-desc {
  color: #999999;
}

.theme-dark .loading-text {
  color: #999999;
}